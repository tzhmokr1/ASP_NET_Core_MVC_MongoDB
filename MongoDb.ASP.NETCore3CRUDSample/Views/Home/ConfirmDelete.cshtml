@model MongoDb.ASP.NETCore3CRUDSample.DataAccess.Models.Customer


<h2>Do you want to delete this customer?</h2>

<form asp-controller="Home" asp-action="Delete" method="post">

    <input type="hidden" name="Id"
           value= @Model.CustomerID />

    <table border="1" cellpadding="10">
        <tr>
            <td>Customer ID :</td>
            <td>@Model.CustomerID</td>
        </tr>
        <tr>
            <td>Name :</td>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <td>Age :</td>
            <td>@Model.Age</td>
        </tr>
        <tr>
            <td>Salary :</td>
            <td>@Model.Salary</td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit">Delete</button>
            </td>
        </tr>
    </table>
</form>